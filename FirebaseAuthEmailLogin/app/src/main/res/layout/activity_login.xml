<?xml version="1.0" encoding="utf-8"?>
<layout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#DAF6C5"
        tools:context=".LoginActivity">

        <EditText
            android:id="@+id/emailLoginEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_design_edittext"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/passwordLoginEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_design_edittext"
            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
            android:hint="Password"
            android:inputType="numberPassword"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#171F08"
                android:buttonTint="#FFFFFF"
                android:checked="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forget Password"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#171F08"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:drawablePadding="6dp"
                android:padding="4dp"/>


        </LinearLayout>
        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_design_btn"
            android:layout_marginTop="20dp"
            android:text="Log In"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="#FFFFFF"/>
        <Button
            android:id="@+id/loginToSignupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_signup_design_btn"
            android:layout_marginTop="20dp"
            android:text="Sign Up"
            android:textSize="15dp"
            android:padding="15dp"
            android:textColor="#20241C"/>
    </LinearLayout>

</layout>