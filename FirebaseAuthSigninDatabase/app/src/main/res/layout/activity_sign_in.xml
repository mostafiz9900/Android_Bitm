<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9ECC78"

        tools:context=".SignInActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <EditText
                android:id="@+id/emailSingInEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:background="@drawable/sign_edittext"
                android:drawableRight="@drawable/ic_email_black_24dp"
                android:inputType="textEmailAddress"
                android:layout_margin="10dp"
                android:padding="10dp"
android:drawablePadding="10dp"
                />
            <EditText
                android:id="@+id/passwordSingInEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:background="@drawable/sign_edittext"
                android:drawableRight="@drawable/ic_lock_open_black_24dp"
                android:inputType="textPassword"
                android:layout_margin="10dp"
                android:padding="10dp"
android:drawablePadding="10dp"
                />
            <Button
                android:id="@+id/signInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sing In"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:textAllCaps="false"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="are you not registered?"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signInToSignUp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/sign_up"/>


            </LinearLayout>
            <ProgressBar
                android:id="@+id/signInPB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</layout>